<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mybookshelf2_1"
    tools:context="com.example.cecilia.mybookshelf.BookOverviewActivityToRead">

    <ProgressBar
        android:id="@+id/progress_toread"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iconImg_toread"
        android:layout_alignEnd="@+id/iconImg_toread"
        android:layout_alignLeft="@+id/iconImg_toread"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/iconImg_toread"
        android:layout_alignStart="@+id/iconImg_toread"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/iconImg_toread"
        android:layout_width="120dp"
        android:layout_height="117dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/titleTxt_toread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/progress_toread"
        android:layout_toRightOf="@+id/progress_toread"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/yearTxt_toread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/titleTxt_toread"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/progress_toread"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/authorTxt_toread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/yearTxt_toread"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/progress_toread"
        android:textColor="@android:color/black"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/pagesTxt_toread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/authorTxt_toread"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/progress_toread"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/ratingTxt_toread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ratingBar_toread"
        android:layout_alignLeft="@+id/iconImg_toread"
        android:layout_alignStart="@+id/iconImg_toread"
        android:layout_alignTop="@+id/ratingBar_toread"
        android:layout_toLeftOf="@+id/ratingBar_toread"
        android:layout_toStartOf="@+id/ratingBar_toread"
        android:gravity="center"
        android:text="Average rating: "
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <RatingBar
        android:id="@+id/ratingBar_toread"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:isIndicator="true"
        android:layout_below="@+id/progress_toread"
        android:layout_alignRight="@+id/pagesTxt_toread"
        android:layout_alignEnd="@+id/pagesTxt_toread" />

    <TextView
        android:id="@+id/aboutTxt_toread"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/imageButton3"
        android:layout_alignEnd="@+id/ratingBar_toread"
        android:layout_alignLeft="@+id/ratingTxt_toread"
        android:layout_alignRight="@+id/ratingBar_toread"
        android:layout_alignStart="@+id/ratingTxt_toread"
        android:layout_below="@+id/ratingTxt_toread"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:maxLines="22"
        android:scrollbars="vertical"
        android:textColor="@android:color/background_dark"
        android:textSize="17dp"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/aboutTxt_toread"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/aboutTxt_toread"
        android:layout_marginBottom="3dp"
        app:srcCompat="@mipmap/move_book" />

    <TextView
        android:id="@+id/moveTxt_toread"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/aboutTxt_toread"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/imageButton3"
        android:gravity="center_vertical"
        android:text="Already Read"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@+id/moveTxt_toread"
        android:layout_toRightOf="@+id/moveTxt_toread"
        app:srcCompat="@mipmap/move_book" />

    <TextView
        android:id="@+id/moveTxt_reading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/aboutTxt_toread"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/aboutTxt_toread"
        android:layout_below="@+id/aboutTxt_toread"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/imageButton4"
        android:layout_toRightOf="@+id/imageButton4"
        android:gravity="center_vertical"
        android:text="Currently Reading"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
