<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mybookshelf2_1"
    tools:context="com.example.cecilia.mybookshelf.ReadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:srcCompat="@mipmap/icon" />

        <TextView
            android:id="@+id/titleRead"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.71"
            android:gravity="center_vertical"
            android:text="Already Read"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="?android:attr/textColorHint"
            android:textColorHighlight="@android:color/background_dark"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="16dp" />

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@android:color/transparent"
            app:srcCompat="@mipmap/back2" />

    </LinearLayout>

    <ListView
        android:id="@+id/listDb1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleRead"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:focusable="true" />

</LinearLayout>
