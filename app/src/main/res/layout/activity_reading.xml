<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mybookshelf2_1"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.cecilia.mybookshelf.ReadingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:srcCompat="@mipmap/icon_reading" />

        <TextView
            android:id="@+id/titleRead"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:height="50dp"
            android:gravity="center_vertical"
            android:text="Currently Reading"
            android:textColor="?android:attr/textColorHint"
            android:textColorHighlight="@android:color/background_dark"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="-2dp" />

        <ImageButton
            android:id="@+id/imageButton10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:background="@android:color/transparent"
            app:srcCompat="@mipmap/back2" />
    </LinearLayout>

    <ListView
        android:id="@+id/listDb1"
        android:layout_width="match_parent"
        android:layout_height="554dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1.02"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="89dp" />

</LinearLayout>
